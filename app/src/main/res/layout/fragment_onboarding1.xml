<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activities.intro_screens.OnboardingActivity"
    android:padding="30dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_onboarding"
        android:layout_width="403dp"
        android:layout_height="290dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/title_onboarding_1"
        android:src="@drawable/onboarding_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_onboarding"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo2_bold"
        android:gravity="center"
        android:text="@string/title_onboarding_1"
        android:textColor="@color/dark_grey"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/image_onboarding"
        tools:layout_editor_absoluteX="60dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_onboarding_title"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/segoe_ui"
        android:gravity="center"
        android:text="@string/description_onboarding_1"
        android:textColor="@color/light_grey"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/text_onboarding_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_onboarding_title"
        app:layout_constraintTop_toBottomOf="@+id/text_onboarding_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
